Host *
  ControlMaster auto
  ControlPath ~/.ssh/sockets/%r@%h:%p
  ControlPersist 900
  ServerAliveInterval 60
  HashKnownHosts no

Host *-*
  ProxyCommand $SHELL -c '. ~/.ec2rc && aws ssm start-session --target ${EC2_ID[%h]} --document-name AWS-StartSSHSession --parameters portNumber=%p'
  ForwardAgent yes
  StrictHostKeyChecking no
  User ssm-user
