startup_message off

# scrollback settings (activates mouse-wheel at xterm level, so merges visible-tty history)
# alternative technique: "^T[" to enter screen hacker's paradise
defscrollback 8192
termcapinfo * ti@:te@

# xterm window title
termcapinfo * hs:ts=\E]0;:fs=\007:ds=\E]0;screen\007

# ^Aa (screen's default) is too important (on the command line) to sacrifice
escape ^Tt
defobuflimit 4096

# UI essentials
nethack on
vbell on
defutf8 on
hardstatus on
hardstatus alwayslastline
hardstatus string "%w"
defdynamictitle on

bind c screen zsh
bind ^C screen zsh
bind b screen zsh -c 'SHELL=bash exec bash'
