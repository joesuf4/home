startup_message off
defscrollback 8192
termcapinfo * ti@:te@
# xterm window title
termcapinfo * hs:ts=\E]0;:fs=\007:ds=\E]0;screen\007
escape ^Tt
defobuflimit 4096
nethack on
vbell on
defutf8 on

hardstatus on
hardstatus alwayslastline
hardstatus string "%w"
defdynamictitle on

bind c screen zsh
bind ^C screen zsh
bind z screen zsh -c '. ~/.zshrc; title "ssh zeus"; exec ssh -At zeus zsh'
bind b screen zsh -c '. ~/.zshrc; title bash; exec bash'
bind h screen zsh -c '. ~/.zshrc; title htop; exec sudo htop'
