startup_message off
defscrollback 8192
termcapinfo * ti@:te@
# xterm window title
termcapinfo * hs:ts=\E]0;:fs=\007:ds=\E]0;screen\007
escape ^Tt
defobuflimit 4096
nethack on
vbell on
defutf8 on

hardstatus on
hardstatus alwayslastline
hardstatus string "%w"
defdynamictitle on

bind c screen zsh
bind ^C screen zsh
bind z screen zsh
bind b screen zsh -c '. ~/.zshrc; title bash; exec bash'
bind m screen zsh -c '. ~/.zshrc; title mldb; exec mldb shell'
bind a screen zsh -c '. ~/.zshrc; title adeb; exec adeb --adb mldb shell'
bind h screen zsh -c '. ~/.zshrc; title htop; exec htop'
bind u screen zsh -c '. ~/.zshrc; title uart_console; exec cu --parity=none --speed=115200 --line=/dev/ttyUSB0'
