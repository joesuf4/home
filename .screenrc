startup_message off
defscrollback 8192
termcapinfo * ti@:te@
escape ^Tt
defobuflimit 4096
nethack on
vbell on
defutf8 on
defdynamictitle on

hardstatus on
hardstatus alwayslastline
hardstatus string "%w"

bind c screen zsh
bind ^C screen zsh
bind z screen zsh -c '. ~/.zshrc; title "ssh zeus"; exec ssh -t zeus ssh-agent zsh'
bind b screen zsh -c '. ~/.zshrc; title bash; exec bash'
bind h screen zsh -c '. ~/.zshrc; title htop; exec sudo htop'
